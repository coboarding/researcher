# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_API_URL=https://api.github.com
GITHUB_RATE_LIMIT=5000

# Application Settings
APP_NAME=DevOps Researcher
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Output Configuration
OUTPUT_DIR=output
REPORTS_DIR=output/reports
CONTRIBUTIONS_DIR=output/contributions
LOGS_DIR=output/logs

# Analysis Settings
MAX_REPOS_PER_ORG=10
MAX_ORGS_TO_ANALYZE=50
ANALYSIS_DELAY_SECONDS=1
RETRY_ATTEMPTS=3

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM_NAME=Your Name

# LinkedIn Configuration (Optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/callback

# Database Configuration (Optional)
DATABASE_URL=sqlite:///devops_researcher.db
# DATABASE_URL=postgresql://user:password@localhost:5432/devops_researcher

# Web Dashboard Configuration (Optional)
WEB_HOST=localhost
WEB_PORT=8000
SECRET_KEY=your_secret_key_here

# Notification Settings (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Target Countries (comma-separated)
TARGET_COUNTRIES=Germany,Austria,Switzerland
TARGET_KEYWORDS=devops,cloud,infrastructure,sysadmin,platform,sre

# Contribution Settings
AUTO_CREATE_PRS=false
AUTO_FORK_REPOS=false
CONTRIBUTION_BRANCH_PREFIX=feature/devops-researcher-
COMMIT_MESSAGE_PREFIX=[DevOps Researcher]

# Rate Limiting
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=1000

# Caching
CACHE_ENABLED=true
CACHE_DURATION_HOURS=24
CACHE_DIR=.cache